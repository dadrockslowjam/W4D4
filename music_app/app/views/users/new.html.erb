<h1>SIGN UP BRO</h1>

<form action="<%= users_url %>" method="POST">
    <input type="hidden"
            name="authenticity_token"
            value="<%= form_authenticity_token %>">
        <label for="email">EMAIL
        </label>
    <input type="text"
            id="email"
            name="user[email]"
            value="<%= @user.email %>">
    <label for="password">PASSWORD
    </label>
    <input type="text"
            id="password"
            name="user[password]"
            value="">
    <input type="submit"
            value="SIGN UP">
</form>